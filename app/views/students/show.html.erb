<div class="student-show">
  <section id="content-region-3" class="padding-40 page-tree-bg">
    <div class="container">
      <% if @student.industry %>
        <h3 class="page-tree-text"><%= @student.full_name %> &nbsp;|&nbsp; <em><%= @student.industry %></em></h3>
      <% else %>
        <h3 class="page-tree-text"><%= @student.full_name %> &nbsp;|&nbsp; <em><%= @student.industry %></em></h3>
      <% end %>
    </div>
  </section><!--page-tree end here-->
  <div class="space-70"></div>
  <div class="container student-show">
    <div class="row">
      <div class="col-md-8">

        <div class="blog-post-section student-section-one">
          <div class="blog-post-img">
              <%= image_tag "#{@student.avatar.index_square.url}", alt: "", class: "img-responsive show-image" %>
          </div>
          <% if @student.seeking_employment %>
            <div class="blog-post-info employment-btn-div">
              <button class="btn btn-lg theme-btn-color employment-btn"> Seeking Employment!</button>
            </div>
          <% end %>
          <div class="blog-post-header city-header">
              <h3><a href="" class="student-city"><%= @student.current_location %></a></h3>
          </div>
        </div>

        <div class="blog-post-section student-section-two">
          <div class="blog-post-detail">
            <h4 class="heading-mini section-heading">My Bootcamp</h4>
            <div class="acltc-info">
              <div class="row">
                <div class="col-md-3 services-icon">
                  <i class="ion-university"></i>
                </div><!--services icon-->
                <div class="col-md-6 services-text">
                  <h4 class="heading-mini">ACLTC: <%= @student.city || "Unavailable" %></h4>
                  <h5 class="student-grad-date">Graduated: <%= @student.friendly_grad_date || "Unavailable" %></h5>
                </div><!--services 1 text-->
              </div><!--services 1 row-->
            </div>
            
            <% if @capstone %>
                <h4 class="heading-mini section-heading">My Capstone: <%= @capstone.name %></h4>
                <div class="blog-post-img">
                  <%= image_tag "#{@capstone.project_image.masonry.url}", alt: "", class: "img-responsive capstone-image" %>
                </div>
                <% unless @capstone.description == "" || @capstone.description == nil %>
                  <div class="student-interview capstone-info">
                    <h4 class="heading-mini question-heading capstone-description-heading">Description</h4> 
                    <p class="capstone-description"><em>" <%= @capstone.description.capitalize %> "</em></p> 
                    <% if @capstone.github || @capstone.website || @capstone.screencast %>
                      <h4 class="heading-mini question-heading checkout-icon-header">Check It Out</h4>
                      <div class="sidebar-box">            
                        <ul class=" list-inline social-btn">
                          <% if @capstone.normalized_github %> 
                            <li><a href="<%= @capstone.normalized_github %>" target="_blank"><i class="ion-social-github" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="My Code On GitHub"></i></a></li>
                          <% end %>
                          <% if @capstone.normalized_website %> 
                            <li><a href="<%= @capstone.normalized_website %>" target="_blank"><i class="ion-android-desktop" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Live Website"></i></a></li>
                          <% end %>
                          <% if @capstone.normalized_screencast %> 
                            <li><a href="<%= @capstone.normalized_screencast %>" target="_blank"><i class="ion-ios-videocam" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="App Screencast"></i></a></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                <% end %>
            <% end %>
          </div>
        </div><!--blog post section end-->

        <div class="blog-post-section student-section-three">
          <% if @student.interview_answers? %>
            <h4 class="heading-mini section-heading">Interview Responses</h4>
            <% unless @student.interview_1 == "" || @student.interview_1 == nil %>
              <div class="student-interview">
                <div class="row">
                  <div class="col-md-3 services-icon">
                    <i class="ion-help"></i>
                  </div><!--services icon-->
                  <div class="col-md-6 services-text">
                    <h4 class="heading-mini question-heading">What is a closure, and how/why would you use one?</h4> 
                    <p><em>" <%= @student.interview_1.capitalize %> "</em></p> 
                  </div><!--services 1 text-->
                </div><!--services 1 row-->
              </div>
            <% end %>
            <% unless @student.interview_2 == "" || @student.interview_2 == nil %>
              <div class="student-interview">
                <div class="row">
                  <div class="col-md-3 services-icon">
                    <i class="ion-help"></i>
                  </div><!--services icon-->
                  <div class="col-md-6 services-text">
                    <h4 class="heading-mini question-heading">What does CORS stand for and what issue does it address?</h4> 
                    <p><em>" <%= @student.interview_2.capitalize %> "</em></p> 
                  </div><!--services 1 text-->
                </div><!--services 1 row-->
              </div>
            <% end %>
            <% unless @student.interview_3 == "" || @student.interview_3 == nil %>
              <div class="student-interview">
                <div class="row">
                  <div class="col-md-3 services-icon">
                    <i class="ion-help"></i>
                  </div><!--services icon-->
                  <div class="col-md-6 services-text">
                    <h4 class="heading-mini question-heading">What is a recent technical challenge you experienced and how did you solve it?</h4> 
                    <p><em>" <%= @student.interview_3.capitalize %> "</em></p> 
                  </div><!--services 1 text-->
                </div><!--services 1 row-->
              </div>
            <% end %>
          <% end %>
          <% unless @student.quote == "" || @student.quote == nil %>
            <h4 class="heading-mini section-heading">Quote</h4>
            <div class="student-quote">
              <div class="row">
                <div class="col-md-3 services-icon">
                  <i class="ion-android-hangout"></i>
                </div><!--services icon-->
                <div class="col-md-6 services-text">
                  <h4 class="heading-mini quote-heading"><em>" <%= @student.quote %> "</em></h4> 
                </div><!--services 1 text-->
              </div><!--services 1 row-->
            </div>
          <% end %>
        </div><!--blog post section end-->
      </div><!--blog content--> 

      <div class="col-md-4">
        <div class="sidebar-box">
          <div class="widget-search">
            <form class="search-form">
              <input type="text" class="form-control" placeholder="search here...">
              <i class="ion-search" data-toggle="tooltip" data-placement="top" title="" data-original-title="hit enter to search"></i>
            </form>
          </div>
        </div><!--sidebar-box--><hr>
        
        <div class="sidebar-box control-buttons">
          <% if admin_signed_in? || student_signed_in? %>
              <a href="/projects/new" class="btn btn-lg theme-btn-color"><i class="ion-plus"></i> &nbsp;Add Project</a> 
          <% end %> 
          <% if admin_signed_in? %>
              <a href="/students/<%= @student.id %>/edit" class="btn btn-lg theme-btn-color"><i class="ion-ios-compose edit-icon"></i></a> 
          <% end %>
        </div><hr>

        <div class="sidebar-box">
          <h4>Top 3 Skills</h4>
          <ul class="cat-list">
            <% if @student.skills? %>
              <% unless @student.skill_1 == "" || @student.skill_1 == nil %>
                <li><a href="#" class="hover-color"><%= @student.skill_1 %></a></li>
              <% end %>
              <% unless @student.skill_2 == "" || @student.skill_2 == nil %>
                <li><a href="#" class="hover-color"><%= @student.skill_2 %></a></li>
              <% end %>
              <% unless @student.skill_3 == "" || @student.skill_3 == nil %>
                <li><a href="#" class="hover-color"><%= @student.skill_3 %></a></li>
              <% end %>
            <% else %>
              <li><a href="#" class="hover-color">Coming Soon</a></li>
            <% end %>
          </ul>
        </div><hr>

        <div class="sidebar-box">
          <h4>Interests</h4>
          <ul class="cat-list">
            <% if @student.interests? %>
              <% unless @student.interest_1 == "" || @student.interest_1 == nil %>
                <li><a href="#" class="hover-color"><%= @student.interest_1 %></a></li>
              <% end %>
              <% unless @student.interest_2 == "" || @student.interest_2 == nil %>
                <li><a href="#" class="hover-color"><%= @student.interest_2 %></a></li>
              <% end %>
              <% unless @student.interest_3 == "" || @student.interest_3 == nil %>
                <li><a href="#" class="hover-color"><%= @student.interest_3 %></a></li>
              <% end %>
            <% else %>
              <li><a href="#" class="hover-color">Coming Soon</a></li>
            <% end %>
          </ul>
        </div><hr>

        <% if @student.github || @student.blog || @student.linked_in %>
          <div class="sidebar-box">
            <h4>Find Me Online</h4>
            <ul class=" list-inline social-btn">
              <% if @student.github %> 
                <li><a href="<%= @student.normalized_github %>" target="_blank"><i class="ion-social-github" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Check Out My GitHub"></i></a></li>
              <% end %>
              <% if @student.blog %> 
                <li><a href="<%= @student.normalized_blog %>" target="_blank"><i class="ion-android-desktop" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Check Out My Blog"></i></a></li>
              <% end %>
              <% if @student.linked_in %> 
                <li><a href="<%= @student.normalized_linked_in %>" target="_blank"><i class="ion-social-linkedin-outline" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Connect on LinkedIn"></i></a></li>
              <% end %>
            </ul>
          </div><hr>
        <% end %>
      </div><!--sideabr blog end -->
    </div>
  </div><!--blog post page content end here-->

  <div class="space-70"></div>

  <section id="content-region-3" class="padding-40 page-tree-bg">
    <div class="container">
      <h3 class="page-tree-text">Projects</h3>
    </div>
  </section><!--page-tree end here-->

  <div class="space-70"></div>
  <% if @projects[0] %>
    <div class="portfolio-masonary-wrapper">
      <div class="container mas-boxes">
        <% @projects.each do |project| %>
          <div class="mas-boxes-inner direc-hover-box wow animated fadeInUp">
              <a href="#">
                  <%= image_tag "#{project.project_image.masonry.url}", class: "img-responsive" %>
                  <div class="direc-overlay">
                      <span><%= project.name %></span>
                      <span class="project-type"><em><%= project.project_type %></em></span>
                  </div>
              </a>
          </div><!--masonry box-->
        <% end %>
      </div>
    </div><!--masonary wrapper-->
  <% else %>
    <h3 class="no-projects-message"><em>In progess. More projects coming soon!</em></h3>
  <% end %>
</div>

