<div id="position-index">
  <div ng-app="app">
    <div ng-controller="positionsCtrl" ng-init="setupPositionIndex()">

      <section id="content-region-3" class="padding-40 page-tree-bg">
        <div class="container">
          <h3 class="page-tree-text">
              Manage Positions
          </h3>
        </div>
      </section><!--page-tree end here-->
      <div class="space-70"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h4 class="heading-mini">Add A Position</h4>
          </div>
          <div>
            <%= render 'form' %>
          </div>
        </div>
        <div class="row">
 
          <div class="col-md-12">
            <h4 class="heading-mini">Current Positions</h4>
            <div class="admin-center-search">
              <div class="form-group">
                <input type="text" ng-model="searchPositionName" class="form-control admin-center-search-bar" placeholder="Search current positions">
              </div>
            </div>
            <table class="table table-hover table-responsive">
              <tbody>
                <tr class="hover-list" ng-repeat="position in positions | filter: { name: searchPositionName } | orderBy: 'name'">
                  <td class="user-entries is-breakable"><p>{{ position.name }}</p></td>
                  <td><a href="/positions/{{ position.id }}/edit" class="btn btn-xs btn-default"><i class="ion-edit"></i></a></td>
                  <td><a href="/positions/{{ position.id }}" class="btn btn-xs btn-default" data-method="delete" data-confirm="Are you sure you want to delete '{{ position.name }}'?"><i class="ion-trash-a"></i></a></td>
                </tr>
              </tbody>
            </table>
          </div> 
        </div>
      </div><!--right sidebar page end-->
    </div>
  </div>
</div>