<div class="container">

  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %></h2>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Edit <%= @student.first_name %> Profile</h2>

  <%= form_for(@student, url: student_path(@student), html: { method: :patch }) do |f| %>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-default" %>
    </div>
  <% end %>

</div>

