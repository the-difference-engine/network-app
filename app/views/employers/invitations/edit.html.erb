<h2><%= t 'devise.invitations.edit.header' %></h2>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  
  <p><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %></p>

  <p><%= f.label :description %><br />
  <%= f.text_field :description, autofocus: true %></p>
    
  <p><%= f.label :rep_first_name %><br />
  <%= f.text_field :rep_first_name, autofocus: true %></p>

    
  <p><%= f.label :rep_last_name %><br />
  <%= f.text_field :rep_last_name, autofocus: true %></p>

    
  <p><%= f.label :rep_phone %><br />
  <%= f.text_field :rep_phone, autofocus: true %></p>

    
  <p><%= f.label :rep_email %><br />
  <%= f.email_field :rep_email, autofocus: true %></p>

    
  <p><%= f.label :city %><br />
  <%= f.text_field :city, autofocus: true %></p>

    
  <p><%= f.label :state %><br />
  <%= f.select(:state, options_for_select(us_states, @employer.state)) %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit t("devise.invitations.edit.submit_button") %></p>
<% end %>
