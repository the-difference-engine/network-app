<!DOCTYPE html>
<html>
<head>
  <title>NetworkApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div id="nav-bar">
    <nav>
      <ul>
        <li class="active"><a href="/">Home</a></li>
        <% if admin_signed_in? %>
          <li><a href="/admin_center">Admin Center</a></li>
        <% end %>
        <li><a href="/employers">Employers</a></li>
        <li><a href="/students">Students</a></li>
        <% if admin_signed_in? %>
          <li><%= link_to current_user.email, admin_path(current_user) %></li>
          <li><a href="/admins/sign_out">Sign Out</a></li>
        <% elsif student_signed_in? %>
          <li><%= link_to current_user.email, student_path(current_user) %></li>
          <li><a href="/admins/sign_out">Sign Out</a></li>
        <% elsif employer_signed_in? %>
          <li><%= link_to current_user.email, employer_path(current_user) %></li>
          <li><a href="/employers/sign_out">Sign Out</a></li>
        <% else %>
          <li><a href="/sign_in">Sign In</a></li>
        <% end %>
      </ul>
    </nav>
  </div>

  <% flash.each do |name, message| %>
    <% if name == "notice" %>
      <% name = "info" %>
    <% end %>
    <div class="alert alert-<%= name %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= message %>
    </div>
  <% end %>

  <%= yield %>

</body>
<script>
  $(function(){
    var current_page_URL = location.href;
    $( "a" ).each(function() {
       if ($(this).attr("href") !== "#") {
         var target_URL = $(this).prop("href");
         if (target_URL == current_page_URL) {
            $('nav a').parents('li, ul').removeClass('active');
            $(this).parent('li').addClass('active');
            return false;
         }
       }
    });
  });
</script>
</html>
