<section id="content-region-3" class="padding-40 page-tree-bg">
  <div class="container">
    <% if @student.industry %>
      <h3 class="page-tree-text"><%= @student.full_name %> &nbsp;|&nbsp; <em><%= @student.industry %></em></h3>
    <% else %>
      <h3 class="page-tree-text"><%= @student.full_name %> &nbsp;|&nbsp; <em><%= @student.industry %></em></h3>
    <% end %>
  </div>
</section><!--page-tree end here-->
<div class="space-70"></div>
<div class="container student-show">
  <div class="row">
    <div class="col-md-8">
      <div class="blog-post-section student-section-one">
        <div class="blog-post-img">
            <%= image_tag "#{@student.avatar.index_square.url}", alt: "", class: "img-responsive show-image" %>
        </div>
        <% if @student.seeking_employment %>
          <div class="blog-post-info employment-btn-div">
            <button class="btn btn-lg theme-btn-color employment-btn"> Seeking Employment!</button>
          </div>
        <% end %>
        <div class="blog-post-header city-header">
            <h3><a href="" class="student-city"><%= @student.city %></a></h3>
        </div>
      </div>
      <div class="blog-post-section student-section-two">
        <div class="blog-post-detail">
          <h4 class="heading-mini section-heading">My Bootcamp</h4>
          <div class="acltc-info">
            <div class="row">
              <div class="col-md-3 services-icon">
                <i class="ion-university"></i>
              </div><!--services icon-->
              <div class="col-md-6 services-text">
                <h4 class="heading-mini">ACLTC: <%= @student.city || "Unavailable" %></h4>
                <h5 class="student-grad-date">Graduated: <%= @student.friendly_grad_date || "Unavailable" %></h5>
              </div><!--services 1 text-->
            </div><!--services 1 row-->
          </div>
          <% if @student.interview_answers? %>
            <h4 class="heading-mini section-heading">Interview Responses</h4>
            <% unless @student.interview_1 == "" || @student.interview_1 == nil %>
              <div class="student-interview">
                <div class="row">
                  <div class="col-md-3 services-icon">
                    <i class="ion-help"></i>
                  </div><!--services icon-->
                  <div class="col-md-6 services-text">
                    <h4 class="heading-mini question-heading">What is a closure, and how/why would you use one?</h4> 
                    <p><em>" <%= @student.interview_1.capitalize %> "</em></p> 
                  </div><!--services 1 text-->
                </div><!--services 1 row-->
              </div>
            <% end %>
            <% unless @student.interview_2 == "" || @student.interview_2 == nil %>
              <div class="student-interview">
                <div class="row">
                  <div class="col-md-3 services-icon">
                    <i class="ion-help"></i>
                  </div><!--services icon-->
                  <div class="col-md-6 services-text">
                    <h4 class="heading-mini question-heading">What does CORS stand for and what issue does it address?</h4> 
                    <p><em>" <%= @student.interview_2.capitalize %> "</em></p> 
                  </div><!--services 1 text-->
                </div><!--services 1 row-->
              </div>
            <% end %>
            <% unless @student.interview_3 == "" || @student.interview_3 == nil %>
              <div class="student-interview">
                <div class="row">
                  <div class="col-md-3 services-icon">
                    <i class="ion-help"></i>
                  </div><!--services icon-->
                  <div class="col-md-6 services-text">
                    <h4 class="heading-mini question-heading">What is a recent technical challenge you experienced and how did you solve it?</h4> 
                    <p><em>" <%= @student.interview_3.capitalize %> "</em></p> 
                  </div><!--services 1 text-->
                </div><!--services 1 row-->
              </div>
            <% end %>
          <% end %>
          <% unless @student.quote == "" || @student.quote == nil %>
            <h4 class="heading-mini section-heading">Quote</h4>
            <div class="student-quote">
              <div class="row">
                <div class="col-md-3 services-icon">
                  <i class="ion-android-hangout"></i>
                </div><!--services icon-->
                <div class="col-md-6 services-text">
                  <h4 class="heading-mini quote-heading"><em>" <%= @student.quote %> "</em></h4> 
                </div><!--services 1 text-->
              </div><!--services 1 row-->
            </div>
          <% end %>
        </div>
      </div><!--blog post section end-->
    </div><!--blog content--> 
    <div class="col-md-4">
      <div class="sidebar-box">
        <div class="widget-search">
          <form class="search-form">
            <input type="text" class="form-control" placeholder="search here...">
            <i class="ion-search" data-toggle="tooltip" data-placement="top" title="" data-original-title="hit enter to search"></i>
          </form>
        </div>
      </div><!--sidebar-box--><hr>
      <div class="sidebar-box">
        <h4>Skills</h4>
        <ul class="cat-list">
          <% if @student.skills? %>
            <% unless @student.skill_1 == "" || @student.skill_1 == nil %>
              <li><a href="#" class="hover-color"><%= @student.skill_1 %></a></li>
            <% end %>
            <% unless @student.skill_2 == "" || @student.skill_2 == nil %>
              <li><a href="#" class="hover-color"><%= @student.skill_2 %></a></li>
            <% end %>
            <% unless @student.skill_3 == "" || @student.skill_3 == nil %>
              <li><a href="#" class="hover-color"><%= @student.skill_3 %></a></li>
            <% end %>
          <% else %>
            <li><a href="#" class="hover-color">Coming Soon</a></li>
          <% end %>
        </ul>
      </div><hr>
      <div class="sidebar-box">
        <h4>Interests</h4>
        <ul class="cat-list">
          <% if @student.interests? %>
            <% unless @student.interest_1 == "" || @student.interest_1 == nil %>
              <li><a href="#" class="hover-color"><%= @student.interest_1 %></a></li>
            <% end %>
            <% unless @student.interest_2 == "" || @student.interest_2 == nil %>
              <li><a href="#" class="hover-color"><%= @student.interest_2 %></a></li>
            <% end %>
            <% unless @student.interest_3 == "" || @student.interest_3 == nil %>
              <li><a href="#" class="hover-color"><%= @student.interest_3 %></a></li>
            <% end %>
          <% else %>
            <li><a href="#" class="hover-color">Coming Soon</a></li>
          <% end %>
        </ul>
      </div><hr>
      <% if @student.github || @student.blog || @student.linked_in %>
        <div class="sidebar-box">
          <h4>Find Me Online</h4>
          <ul class=" list-inline social-btn">
            <% if @student.github %> 
              <li><a href="<%= @student.normalized_github %>"><i class="ion-social-github" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Check Out My GitHub"></i></a></li>
            <% end %>
            <% if @student.blog %> 
              <li><a href="<%= @student.normalized_blog %>"><i class="ion-android-desktop" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Check Out My Blog"></i></a></li>
            <% end %>
            <% if @student.linked_in %> 
              <li><a href="%= @student.normalized_linked_in %>"><i class="ion-social-linkedin-outline" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Connect on LinkedIn"></i></a></li>
            <% end %>
          </ul>
        </div><hr>
      <% end %>
      <% if admin_signed_in? || student_signed_in? %>
        <div class="sidebar-box">
          <a href="/projects/new" class="btn btn-lg theme-btn-color"><i class="ion-plus"></i> &nbsp;Add Project</a> 
        </div><hr>
      <% end %> 
    </div><!--sideabr blog end -->
  </div>
</div><!--blog post page content end here-->

