<header class="header-main">
  <% if current_user %>
    <div class="top-bar">
      <div class="container">
        <div class="pull-right">
          <ul class="info list-inline hidden-xs">
            <li><a href="#" class="hover-color"><i class="ion-man"></i> &nbsp;<%= current_user.email.upcase %> &nbsp;|&nbsp; <%= current_user.class.name.upcase %></a></li>
         </ul>
         </div>
       </div><!--container end-->
    </div><!--topbar end-->
  <% end %>
  <div class="navbar navbar-default sticky-nav sticky yamm" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if admin_signed_in? %>
          <a class="navbar-brand" href="/dashboard"><%= image_tag "acltc_logo_112x28.png", class: "img-responsive" %></a>
        <% elsif student_signed_in? || employer_signed_in? %>
          <a class="navbar-brand" href="/students"><%= image_tag 'acltc_logo.png', class: "img-responsive navbar-brand" %></a>
        <% else %>
          <a class="navbar-brand" href="/sign_in"><%= image_tag 'acltc_logo.png', class: "img-responsive navbar-brand" %></a>
        <% end %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if admin_signed_in? %>
            <li class=" dropdown">
              <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown">Admin Center</a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Dashboard', admin_center_path %></li>
                <li class="dropdown-submenu">
                  <a tabindex="-1" href="#">Batch Invites </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Invite Students', student_batch_invite_path %></li>
                    <li><%= link_to 'Invite Employers', "#" %></li>
                    <li><%= link_to 'Invite Admins', "#" %></li>
                  </ul>
                </li>
                <li class="dropdown-submenu">
                  <a tabindex="-1" href="#">Create Accounts </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'New Student', new_admin_student_path %></li>
                    <li><%= link_to 'New Employer', new_admin_employer_path %></li>
                    <li><%= link_to 'New Admin', new_admin_admin_path %></li>
                  </ul>
                </li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <%= link_to 'Students', students_path, class: "dropdown-toggle js-activated" %>
          </li>
          <li class="dropdown">
            <%= link_to 'Employers', employers_path, class: "dropdown-toggle js-activated" %>
          </li>
          <% if admin_signed_in? %>
            <li class=" dropdown">
              <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown">My Account</a>
              <ul class="dropdown-menu">
                <li><%= link_to 'View My Profile', admin_path(current_user) %></li>
                <li><%= link_to 'Edit My Account', edit_admin_path(current_user) %></li>
                <li><%= link_to 'Sign Out', destroy_admin_session_path %></li>
              </ul>
            </li>
          <% elsif student_signed_in? %>
            <li class=" dropdown">
              <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown">My Account</a>
              <ul class="dropdown-menu">
                <li><%= link_to 'View My Profile', student_path(current_user) %></li>
                <li><%= link_to 'Edit My Account', edit_student_path(current_user) %></li>
                <li><%= link_to 'Sign Out', destroy_student_session_path %></li>
              </ul>
            </li>
          <% elsif employer_signed_in? %>
            <li class=" dropdown">
              <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown">My Account</a>
              <ul class="dropdown-menu">
                <li><%= link_to 'View My Profile', employer_path(current_user) %></li>
                <li><%= link_to 'Edit My Account', edit_employer_path(current_user) %></li>
                <li><%= link_to 'Sign Out', destroy_employer_session_path %></li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <%= link_to 'Sign In', home_sign_in_path %>
            </li>
          <% end %>
          <!--menu Features li end here--> 
          <li class="social-nav"><a href="#"><i class="ion-social-facebook"></i></a></li>
          <li class="social-nav"><a href="#"><i class="ion-social-twitter"></i></a></li>
          <li class="social-nav"><a href="#"><i class="ion-social-youtube"></i></a></li>  
        </ul>
      </div><!--/.nav-collapse -->
    </div><!--/.container-->
  </div><!--navigation end-->
</header><!--header main end-->