<div class="student-index">
<div ng-app="app">
<div ng-controller="studentsCtrl" ng-init="setupStudentIndex()">
  <section id="content-region-3" class="padding-40 page-tree-bg">
    <div class="container">
      <h3 class="page-tree-text">ACLTC Students</h3>
    </div>
  </section><!--page-tree end here-->
  <div class="space-70"></div>
  <div class="container student-index">
    <div class="row">
      <div class="col-md-12">
        <ul class="portfolio-filters">
          <li class="filter active" data-filter="all">all</li>
          <li class="filter" data-filter="design">design</li>
          <li class="filter" data-filter="html">HTML5</li>
          <li class="filter" data-filter="wordpress">Wordpress</li>
          <li class="filter" data-filter="seo">Seo</li>
        </ul>
        <div id="grid" class="row">  
          <div class=" mix col-md-4 col-sm-6 col-xs-12 margin-btm-40" ng-repeat="student in activeStudents">
            <div class="portfolio-sec">
              <div class="portfolio-thumnail">
                <a href="/students/{{ student.id}}"><img ng-src="{{student.avatar.avatar.index_square.url}}" class="img-responsive" data-toggle="modal" /></a>
              </div>
              <div class="portfolio-desc text-center"> 
                <h4 class="portfolio-post-title">{{ student.full_name }}</h4>
                <span class="portfolio-post-cat">{{ student.current_location }}</span>
                <span ng-show="skillExists(student)" class="portfolio-post-cat skill">{{ student.skill_1 }}</span>
                <span ng-show="skillExists(student)" class="portfolio-post-cat skill">{{ student.skill_2 }}</span>
                <span ng-show="skillExists(student)" class="portfolio-post-cat skill">{{ student.skill_3 }}</span>
                <h4><a href="/students/{{ student.id }}" class="btn theme-btn-default btn-lg">More Details</a></h4>
              </div>
            </div>
          </div><!--portfolio item -->
        </div><!--grid-->
      </div>
    </div><!--row-->
  </div><!--portfolio container end-->
</div>
</div>
</div>