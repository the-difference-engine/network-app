<div class="employer-new">
  <section id="content-region-3" class="padding-40 page-tree-bg">
      <div class="container">
          <h3 class="page-tree-text">
              Employer Sign Up
          </h3>
      </div>
  </section><!--page-tree end here-->

  <div class="space-70"></div>

  <div class="container">
      <div class="row">
        <%= form_for(@employer, url: admin_employers_path, html: { :multipart => true }) do |f| %>
          <div class="col-md-6 col-md-offset-3">
              <div class="my-login-form">
                <h4 class="heading-mini">Log In Information</h4><hr>
                <div class="row">
                    <div class="col-md-6 margin-btm-20">
                        <%= f.label :name %><br />
                        <%= f.text_field :name, class: "form-control" %>
                    </div>
                     <div class="col-md-6 margin-btm-20">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, class: "form-control" %>
                    </div>
                     <div class="col-md-6 margin-btm-20">
                        <%= f.label :password %><br />
                        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    </div>
                     <div class="col-md-6 margin-btm-20">
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                    </div>
                </div>
              </div>
              <div class="my-login-form">
                <h4 class="heading-mini">Employer Details</h4><hr>
                <div class="row">
                    <div class="col-md-6 margin-btm-20">
                        <%= f.label :city %><br />
                        <%= f.text_field :city, class: "form-control" %>
                    </div>
                     <div class="col-md-6 margin-btm-20">
                        <%= f.label :state %><br />
                        <%= f.email_field :state, class: "form-control" %>
                    </div>
                     <div class="col-md-6 margin-btm-20">
                        <%= f.label :website %><br />
                        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    </div>
                    <div class="col-md-6 margin-btm-20">
                      <%= f.file_field :image, class: "form-control" %>
                    </div>
                </div>
              </div>

             
 
          </div>
        <div class="col-md-12 text-right">
          <%= f.submit "Submit", class: "btn btn-default" %>
        </div>
        <% end %>

        <hr>
        <div class="form-btm-link text-center">
          <%= link_to "Already have an account?", new_employer_session_path %>
        </div>
      </div>
  </div>




      

</div>