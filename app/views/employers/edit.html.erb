<div class="container">

  <% if @employer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employer.errors.count, "error") %></h2>
      <ul>
      <% @employer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Edit <%= @employer.name %></h2>

  <%= form_for(@employer, url: employer_path(@employer), html: { method: :patch }) do |f| %>
    <h3>Edit Account Details</h3>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :image %><br />
      <%= f.text_field :image, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :rep_first_name %><br />
      <%= f.text_field :rep_first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :rep_last_name %><br />
      <%= f.text_field :rep_last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :rep_phone %><br />
      <%= f.text_field :rep_phone, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :rep_email %><br />
      <%= f.email_field :rep_email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :website %><br />
      <%= f.text_field :website, autofocus: true %>
    </div>

    <h3>Log In Information</h3>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <h3>Edit Log In Info</h3>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-default" %>
    </div>
  <% end %>

</div>

