<div class="container-fluid" id="employer-index">
  <div class="row">
    <ul>
    <% @employers.each do |employer| %>
      <div class="indiv-employer">
        <li>
          <% if employer.image != "" %>
             <%= image_tag(employer.image, class: "img-responsive") %>
          <% else %>
             <%= image_tag('no_photos.png', class: "img-responsive") %>
          <% end %>
          <h3><%= link_to employer.name, employer_path(employer) %></h3>
          <p><%= employer.description %></p>
          <br>
          <% if admin_signed_in? || employer_signed_in? && current_employer.id == employer.id %>
            <%= link_to 'Edit Profile', edit_employer_path(employer), class: "btn btn-default btn-xs" %>
            <%= link_to 'Delete', employer_path(employer), method: :delete, data: { confirm: "Are you sure you want to delete '#{employer.name}'"}, class: "btn btn-default btn-xs" %>
          <% end %>
        </li>
      </div>
    <% end %>
    </ul>
  </div> 
</div>
