

<div id="admin-center">
  <div ng-app="app">
    <div ng-controller="adminsCtrl" ng-init="setupUserSearch()">
      <section id="content-region-3" class="padding-40 page-tree-bg">
          <div class="container">
              <h3 class="page-tree-text">
                  Welcome, <%= current_user.full_name %>!
              </h3>
          </div>
      </section><!--page-tree end here-->
      <div class="space-70"></div>
      <div class="container">
          <div class="row">
               <div class="col-md-4">
                  <div class="sidebar-box">
                      <div class="widget-search">
                          <form class="search-form">
                              <input type="text" class="form-control" placeholder="search here...">
                              <i class="ion-search" data-toggle="tooltip" data-placement="top" title="" data-original-title="hit enter to search"></i>
                          </form>
                      </div>
                  </div><!--sidebar-box--><hr>
                  <div class="sidebar-box">
                      <h4>categories</h4>
                      <ul class="cat-list">
                          <li><a href="#" data-toggle="tooltip" data-placement="right" title="" data-original-title="10" class="hover-color">Sports</a></li>
                          <li><a href="#" data-toggle="tooltip" data-placement="right" title="" data-original-title="6" class="hover-color">Management</a></li>
                          <li><a href="#" data-toggle="tooltip" data-placement="right" title="" data-original-title="8" class="hover-color">Music</a></li>
                          <li><a href="#" data-toggle="tooltip" data-placement="right" title="" data-original-title="14" class="hover-color">Product</a></li>
                      </ul>
                  </div><hr>
              </div><!--sideabr blog end -->
              <div class="col-md-8">
                <h4 class="heading-mini">
                    Left sidebar page
                </h4>

                    <!--tabs start-->
                    <div class="tabs">
                      <ul class="nav nav-tabs">
                        <li class="active"><a href="#students" data-toggle="tab">Students</a></li>
                        <li class=""><a href="#employers" data-toggle="tab">Employers</a></li>
                        <li class=""><a href="#admins" data-toggle="tab">Admins</a></li>
                        <li class=""><a href="#pending" data-toggle="tab">Pending Invites</a></li>
                      </ul>

                      <!-- Tab panes -->
                      <div class="tab-content">
                        <div class="tab-pane active" id="students">
                          <div class="tab-desc animated fadeIn">
                            <div class="admin-center-search">
                              <div class="form-group">
                                <input type="text" ng-model="searchStudentName" class="form-control admin-center-search-bar" placeholder="Search students">
                              </div>
                            </div>
                            <table class="table table-hover">
                              <tbody>
                                <tr class="hover-list"ng-repeat="student in activeStudents | filter: { full_name: searchStudentName } | orderBy: 'last_name'">
                                  <td class="user-entries">
                                    <div class="cell-div">
                                      <a href="/students/{{ student.id }}" class="user-name">{{ student.full_name }}</a>
                                    </div>
                                  </td>
                                  <td>
                                    <div class="cell-div">
                                      <a href="/students/{{ student.id }}/edit" class="btn btn-xs btn-default">Edit</a>
                                    </div>
                                  </td>
                                  <td>
                                    <div class="cell-div">
                                      <a href="/students/{{ student.id }}" data-method="delete" data-confirm="Are you sure you want to delete '{{ student.name }}'?" class="btn btn-xs btn-default">Delete</a>
                                    </div>
                                  </td>
                                </tr>
                              </tbody>
                            </table>
                          </div> 
                        </div>
                        <div class="tab-pane" id="employers">
                          <div class="tab-desc animated fadeIn">
                            <div class="admin-center-search">
                              <div class="form-group">
                                <input type="text" ng-model="searchEmployerName" class="form-control admin-center-search-bar" placeholder="Search employers">
                              </div>
                            </div>
                            <table class="table table-hover">
                              <tbody>
                                <tr class="hover-list"ng-repeat="employer in employers | filter: { name: searchEmployerName } | orderBy: 'name'">
                                  <td class="user-entries">
                                    <div class="cell-div">
                                      <a href="/employers/{{ employer.id }}" class="user-name">{{ employer.name }}</a>
                                    </div>
                                  </td>
                                  <td>
                                    <div class="cell-div">
                                      <a href="/employers/{{ employer.id }}/edit" class="btn btn-xs btn-default">Edit</a>
                                    </div>
                                  </td>
                                  <td>
                                    <div class="cell-div">
                                      <a href="/employers/{{ employer.id }}" data-method="delete" data-confirm="Are you sure you want to delete '{{ employer.name }}'?" class="btn btn-xs btn-default">Delete</a>
                                    </div>
                                  </td>
                                </tr>
                              </tbody>
                            </table>
                          </div> 
                        </div>
                        <div class="tab-pane" id="admins">
                          <div class="tab-desc animated fadeIn">
                            <div class="tab-desc animated fadeIn">
                              <div class="admin-center-search">
                                <div class="form-group">
                                  <input type="text" ng-model="searchAdminName" class="form-control admin-center-search-bar" placeholder="Search admins">
                                </div>
                              </div>
                              <table class="table table-hover">
                                <tbody>
                                  <tr class="hover-list"ng-repeat="admin in admins | filter: { full_name: searchAdminName } | orderBy: 'last_name'">
                                    <td class="user-entries">
                                      <div class="cell-div">
                                        <a href="/admins/{{ admin.id }}" class="user-name">{{ admin.full_name }}</a>
                                      </div>
                                    </td>
                                    <td>
                                      <div class="cell-div">
                                        <a href="/admins/{{ admin.id }}/edit" class="btn btn-xs btn-default">Edit</a>
                                      </div>
                                    </td>
                                    <td>
                                      <div class="cell-div">
                                        <a href="/admins/{{ admin.id }}" data-method="delete" data-confirm="Are you sure you want to delete '{{ admin.name }}'?" class="btn btn-xs btn-default">Delete</a>
                                      </div>
                                    </td>
                                  </tr>
                                </tbody>
                              </table>
                            </div> 
                          </div>
                        </div>
                        <div class="tab-pane" id="pending">
                          <div class="tab-desc animated fadeIn">
                            <div class="tab-desc animated fadeIn">
                              <div class="admin-center-search">
                                <div class="form-group">
                                  <input type="text" ng-model="searchUserEmail" class="form-control admin-center-search-bar" placeholder="Search pending invites">
                                </div>
                              </div>
                              <table class="table table-hover">
                                <tbody>
                                  <tr class="hover-list"ng-repeat="user in pendingUsers | filter: { email: searchUserEmail } | orderBy: 'role'">
                                    <td class="user-entries">
                                      <div class="cell-div">
                                        <a href="#" class="user-name">{{ user.email }}</a>
                                      </div>
                                    </td>
                                    <td class="user-entries">
                                      <div class="cell-div">
                                        <a href="#" class="user-name">{{ user.role }}</a>
                                      </div>
                                    </td>
                                  </tr>
                                </tbody>
                              </table>
                            </div> 
                          </div>
                        </div>
                      </div>
                    </div>
                    <!--tabs end-->
                
                  
              </div>
          </div>
      </div><!--left sidebar page end-->
    </div>
  </div>
</div>