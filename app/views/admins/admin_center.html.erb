<div id="admin-center">
  <div class="container" id="admin-new-buttons">
    <%= link_to 'Add Employer', new_admin_employer_path, class: "btn btn-default" %>
    <%= link_to 'Add Student', new_admin_student_path, class: "btn btn-default" %>
    <%= link_to 'Add Admin', new_admin_admin_path, class: "btn btn-default" %>
  </div>
  
  <div id="user-lists">
    <div class="container">
      <div class="list-container">
        <h2>Employers</h2>
        <ul class="hoverlist">
          <% @employers.each do |employer| %>
            <li class="employer-info"><%= link_to employer.name, employer_path(employer) %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="container">
      <div class="list-container">
        <h2>Students</h2>
        <ul class="hoverlist">
          <% @students.each do |student| %>
            <li class="student-info"><%= link_to student.full_name, student_path(student) %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="container">
      <div class="list-container">
        <h2>Admins</h2>
        <ul class="hoverlist">
          <% @admins.each do |admin| %>
            <li class="admin-info"><%= link_to admin.full_name, admin_path(admin) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
